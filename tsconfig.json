{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "inlineSources": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "srv",
    "baseUrl": "src",
    "lib": [
      "esnext", "dom"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
